<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">

    <!-- Aqui van las consultas sql (Finder, en un futuro) -->
    <!-- Ejemplo consulta -->
    <named-query name="Agent.findByID">
        <query>
        	select a
        	from Agent a
        	where a.id = ?1
        </query>
    </named-query>

    <named-query name="Agent.findByUsername">
        <query>
        	select a
        	from Agent a
        	where a.username = ?1
       	</query>
    </named-query>

</entity-mappings>